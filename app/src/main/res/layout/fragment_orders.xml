<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context=".ui.order.OrderFragment">

    <ImageView
        android:id="@+id/ivLogo"
        android:src="@drawable/ic_empty_order"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:text="Ouch! Hungry"
        android:layout_marginTop="30dp"
        style="@style/TextView.PoppinsNormal20spBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Sepertinya kamu belum\n memesan makanan"
        android:layout_marginTop="6dp"
        style="@style/TextView.PoppinsLight14spGray"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="30dp"
        style="@style/Button.Primary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Find Food"
        android:textAllCaps="false"/>
</LinearLayout>